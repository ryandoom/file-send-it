
<%= form_for @upload, :html => {:multipart => true} do |f| %>

<% @upload.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>


  <%= f.label :to_email %><br/>
  <%= f.text_field :to_email %><br/>
  <br/>
  
  <%= f.label :comment %><br/>
  <%= f.text_area :comment %><br/>
  <br/>
  <%= f.label :document %>
  <br/>
  <%= f.file_field :document %>


  <%= f.submit "Save my Upload", :disable_with => "Uploading .." %>


<% end %>